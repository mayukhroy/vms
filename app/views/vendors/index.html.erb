<% if user_signed_in? %>

<span class="tag-title">Vendors <%= link_to image_tag("/assets/icons/add.png"), new_vendor_path, :data => { :colorbox => true }, class: "link-btn" %></span>
<p id="notice"><%= notice %></p>
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Action</th>
  </tr>

<% @vendors.each do |vendor| %>
  <tr>
    <td><%= vendor.name %></td>
    <td><%= vendor.email %></td>
    <td><%= link_to image_tag("/assets/icons/view.png"), vendor, :data => { :colorbox => true }, class: "link-btn" %>
    <% if current_user.id==vendor.user_id %>
    <%= link_to image_tag("/assets/icons/edit.png"), edit_vendor_path(vendor), :data => { :colorbox => true }, class: "link-btn" %>
    <%= link_to image_tag("/assets/icons/delete.png"), vendor, method: :delete, data: { confirm: 'Are you sure?' }, class: "link-btn" %></td>
    </td>
    <% end  %>
    <% end  %>
</tr>

</table>
<tr align='right'><td><%= will_paginate @vendors %></td></tr>
<br />
<% end %>

